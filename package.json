{
  "name": "hsmse-hw",
  "version": "0.1.0",
  "description": "Desktop application for scraping homework assignments from Google Classroom and Jupiter Ed",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --mac --win",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make:builder": "electron-builder"
  },
  "keywords": [
    "homework",
    "scraper",
    "google-classroom",
    "jupiter-ed",
    "electron",
    "desktop-app"
  ],
  "author": "Naomi Novik",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-dmg": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "app-module-path": "^2.2.0"
  },
  "build": {
    "appId": "com.naominovik.hsmse-hw",
    "productName": "HSMSE HW",
    "executableName": "HSMSE HW",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!secrets/**/*",
      "!data/**/*",
      "!out/**/*",
      "!forge.config.js",
      "!*.md",
      "!secrets/",
      "!data/",
      "!**/*.log"
    ],
    "mac": {
      "category": "public.app-category.education",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        },
        {
          "target": "zip",
          "arch": ["arm64", "x64"]
        }
      ],
      "icon": "icon/hsmse-hw-icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "icon": "icon/hsmse-hw-icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
